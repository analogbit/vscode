// Place your settings in this file to overwrite the default settings
{
    "bookmarks.saveBookmarksBetweenSessions": true,
    "bookmarks.navigateThroughAllFiles": true,
    "bookmarks.useStickyBookmarks": true,
    "C_Cpp.autocomplete": "Default",
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.fontFamily": "Courier New",
    "editor.fontSize": 12,
    "editor.lineHeight": 20,
    "editor.lineNumbers": "off",
    "editor.formatOnType": false,
    "editor.quickSuggestions": false,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.selectionHighlight": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnEnter": true,
    "editor.wordBasedSuggestions": true,
    "editor.tabCompletion": true,
    "explorer.enableDragAndDrop": false,
    "files.autoSave": "onWindowChange",
    "files.hotExit": "off",
    "files.encoding": "windows1252",
    "files.exclude": {
        "**/.*swp": true,
        "files": true,
        "TAGS": true
    },
    "files.trimTrailingWhitespace": true,
    "problems.autoReveal": false,
    "search.quickOpen.includeSymbols": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    // List of colors to be used to highlight the selected text
    "textmarker.highlightColors": [
        "peachpuff",
        "aquamarine",
        "yellow",
        "slategray",
        "slateblue",
        "violet",
        "blue",
        "turquoise",
        "gray",
        "khaki",
        "orange",
        "salmon",
        "seagreen"
    ],
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "BUG:", // custom text to be highlighted
            "color": "white", // the text color, any css color identifier is valid
            "backgroundColor": "red", // the text background color
            "overviewRulerColor": "red" //the color of the ruler mark on the scroll bar. use rgba() and define transparent colors to play well with other decorations.
        }
    ],
    "todohighlight.defaultStyle": {
        "color": "black",
        "backgroundColor": "darkkhaki",
        "overviewRulerColor": "grey"
    },
    "workbench.colorTheme": "Lightink",
    "workbench.iconTheme": "vs-seti"
}
